    <script type="text/javascript">
        $(document).ready(function () {
            @*document.all.DSOFramer.Open(encodeURI("@Model.Directory"),false, "Word.Document");*@  

            $('#file_upload').uploadify({
                'swf': '/Scripts/uploadify/uploadify.swf',
                'uploader': '/Upload/Index',
                'buttonText':'上传',
                'onUploadStart': function (file) {
                    var htmlString = '<li class="create-ul-li"><div class="create-li-img">';
                    if (file.type == '.txt' || file.type == '.doc' || file.type == '.docx') {
                        htmlString += '<img src="/Images/文本资料.png" /></div>';
                    } else if (file.type == '.png' || file.type == '.jpg' || file.type == '.gif' || file.type == '.gif') {
                        htmlString += '<img src="/Images/图片资料.png" /></div>';
                    } else if (file.type == '.mp4' || file.type == '.wmv' || file.type == '.amv') {
                        htmlString += '<img src="/Images/视频资料.png" /></div>';
                    } else if (file.type == '.mp3') {
                        htmlString += '<img src="/Images/音频资料.png" /></div>';
                    } else {
                        htmlString += '<img src="/Images/文本资料.png" /></div>';
                    }
                    
                    //<div class="create-li-btnDel" onclick="CreateDel("'+file.name+'")">删除</div>
                    htmlString += file.name + '</li>';
      
                    $("#imgul").append(htmlString);
                    lhgdialog.masklayer();
                }
            });
            
            $('#file_upload-button').removeClass("uploadify-button");
            $("#file_upload-button").removeAttr("style");
            $("#file_upload").attr("style","height: 30px;");
            $('#file_upload-button').addClass("home-button-right");
            $(".swfupload").attr("style","position: absolute; z-index: 1;right:0px;");
        });


    function retrunBtn(url) {
        location.href = url;
    }


    function SaveWord() {
        document.all.DSOFramer.HttpInit();
        document.all.DSOFramer.HttpAddPostCurrFile("FileData", "会议记录.docx");
        document.all.DSOFramer.HttpPost('@viewmodel.RerurnHomeButton');
    }


        function ExportWord() {
            location.href = "/MeetingInfo/ExportWord?fileName="+@Model.MeetingId;
        }
</script>
</body>
